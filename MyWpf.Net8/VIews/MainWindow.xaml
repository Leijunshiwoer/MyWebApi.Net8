<Window x:Class="MyWpf.Net8.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MyWpf.Net8"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:MyWpf.Net8.ViewModels"
        Title="MainWindow"
        Width="1920"
        Height="1080"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="6*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>


        <Grid Grid.Row="1"
              Grid.Column="1"
              Width="1000"
              HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       FontSize="20"
                       Text="我是 DeepSeek，很高兴见到你" />
            <TextBlock Grid.Row="1"
                       FontSize="14"
                       Text="我可以帮你写代码、读文件、写作各种创意内容，请把你的任务交给我吧~" />
            <TextBox Grid.Row="2"
                     Margin="0,5"
                     AcceptsReturn="True"
                     Text="{Binding ResponseText}"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Visible" />
            <TextBox Grid.Row="3"
                     Margin="0,5"
                     AcceptsReturn="True"
                     Text="{Binding RequestText}"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Visible" />
            <Button Grid.Row="4"
                    Width="100"
                    HorizontalAlignment="Right"
                    Background="Blue"
                    Command="{Binding SubmitCommand}"
                    Content="提交"
                    IsEnabled="{Binding IsEnable}" />
        </Grid>
    </Grid>
</Window>
